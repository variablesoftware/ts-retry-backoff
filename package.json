{
  "name": "@variablesoftware/ts-retry-backoff",
  "description": "🎛️🔁🚀 A tiny, zero‑dependencies retry helper with exponential backoff + jitter—usable for KV, HTTP, Durable Objects, or any async function.",
  "version": "0.0.2",
  "author": {
    "name": "Rob Friedman",
    "email": "bunkcode@variablesoftware.com",
    "url": "https://github.com/variablesoftware"
  },
  "keywords": [
    "typescript",
    "retry",
    "backoff",
    "exponential-backoff",
    "jitter",
    "async",
    "promise",
    "zero-dependencies"
  ],
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts",
      "import1": "./dist/src/index.esm.js",
      "require1": "./dist/src/index.cjs.js"
    }
  },
  "type": "module",
  "lint-staged": {
    "**/*.{ts,js,mjs,cts}": "eslint --fix"
  },
  "scripts": {
    "build": "tsc && yarn minify",
    "prepare": "husky install",
    "build:watch": "tsc --watch",
    "build:release": "yarn build && yarn minify",
    "minify": "yarn terser --timings --compress --mangle --toplevel --source-map includeSources dist/src/index.js --output dist/src/index.min.js",
    "prebuild": "yarn clean",
    "prepublishOnly": "yarn test:build",
    "clean": "rm -rf dist",
    "clean:all": "rm -rf dist && git tag -d $(git tag)",
    "dev": "vitest watch",
    "format": "yarn format:all",
    "format:all": "prettier --write --log-level error .",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prettier:check": "prettier --check .",
    "publish:npm": "yarn npm publish --access public",
    "test": "vitest run",
    "test:watch": "yarn vitest --watch",
    "test:build": "yarn clean && yarn build && yarn test",
    "corepack:go": "corepack enable && corepack prepare yarn@4.9.1 --activate",
    "upgrade:latest": "yarn set version stable && yarn upgrade-interactive",
    "version:patch": "yarn version patch",
    "version:minor": "yarn version minor",
    "version:major": "yarn version major",
    "release": "yarn clean && yarn build:release && git push && git push --tags && yarn npm publish --access public"
  },
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/variablesoftware/ts-retry-backoff.git"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@microsoft/tsdoc": "^0.15.1",
    "@microsoft/tsdoc-config": "^0.17.1",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.3",
    "eslint-plugin-tsdoc": "^0.4.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "rollup": "^4.40.2",
    "semantic-release": "^24.2.3",
    "terser": "^5.39.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "packageManager": "yarn@4.9.1+sha512.f95ce356460e05be48d66401c1ae64ef84d163dd689964962c6888a9810865e39097a5e9de748876c2e0bf89b232d583c33982773e9903ae7a76257270986538"
}
